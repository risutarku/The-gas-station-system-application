<UserControl x:Class="Gas.SelectPurchasedetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gas"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    
    <Grid Background="Beige">
        <ContentControl x:Name="contentControl">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
                    <ComboBox Name="comboBox" Width="100" HorizontalAlignment="Left" Margin="0,10,10,10" Background="AliceBlue" SelectedIndex="0"/>
                    <TextBox Name="litres" Width="60" Margin="10" TextAlignment="Center" Background="AliceBlue" PreviewTextInput="TextBox_PreviewTextInput" MaxLength="4" Text="0"/>
                </StackPanel>
                <Button Background="AliceBlue" Width="50" Height="25" Content="Далее" Click="goToConfirmOrderDialog_click" HorizontalAlignment="Center" Margin="30"/>   
            </StackPanel>
        </ContentControl>
    </Grid>
</UserControl>
